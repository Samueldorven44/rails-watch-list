<div class="banner" style="background-image: url('<%= url_for(@list.photo)%>')">
  <div class="banner-text">
    <h1><%= @list.name %></h1>
  </div>
</div>

<% @list.bookmarks.each do |bookmark|%>
  <p>
    Film: <%= bookmark.movie.title %><br>
    Commentaire <%= bookmark.comment %>
  </p>
  <%= link_to "Delete",
    list_bookmark_path(@list, bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
    class: "btn btn-danger"
  %>
<% end %>
<%= link_to "Ajouter un bookmark", new_list_bookmark_path(@list), class:"btn btn-success" %>
<%= link_to "⬅ Retour à la liste", lists_path, class:"btn btn-primary"%>
