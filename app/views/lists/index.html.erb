<div class="banner">
  <div class="banner-text">
    <h1>Watch List</h1>
    <p>Listez vos film préféré sur un seul et même site</p>
  </div>
</div>
<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.name, list_path(list) %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Ajouter une liste", new_list_path, class:"btn btn-primary"%>
